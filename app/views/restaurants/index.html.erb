<div class="container mt-4">
  <ul class="list-group">
    <% @restaurant.each do |restaurant| %>
      <li class="list-group-item">
        <%= link_to restaurant.name, restaurant_path(restaurant), class: "fw-bold" %>
        <span class="text-muted">
          - <%= restaurant.address %>,
          <%= restaurant.phone_number %>,
          <%= restaurant.category %>
        </span>
      </li>
    <% end %>
  </ul>

  <p class="mt-3">
    <%= link_to "+ Add restaurant", new_restaurant_path, class: "btn btn-primary" %>
  </p>
</div>
